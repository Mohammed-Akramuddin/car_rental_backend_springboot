# ================================================
# LUXURY CAR RENTAL SYSTEM - ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ------------------------------------------------
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ------------------------------------------------
DB_URL=jdbc:postgresql://your-neon-host.neon.tech:5432/car_rental?sslmode=require
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# ------------------------------------------------
# JWT CONFIGURATION
# ------------------------------------------------
# Generate a secure 256-bit (32+ character) secret key
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ------------------------------------------------
# SERVER CONFIGURATION
# ------------------------------------------------
SERVER_PORT=8080

# ------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------
# Comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ------------------------------------------------
# BREVO MAIL (activation emails)
# ------------------------------------------------
# From address – MUST be verified in Brevo → Senders & Domains
MAIL_FROM=mohdakram6174@gmail.com
# MAIL_HOST=smtp-relay.brevo.com
# MAIL_PORT=587
# MAIL_USERNAME=your-smtp-login@smtp-brevo.com
# MAIL_PASSWORD=your-brevo-smtp-key

# ------------------------------------------------
# APP BASE URL (for activation links in emails)
# ------------------------------------------------
APP_BASE_URL=http://localhost:8081

# ------------------------------------------------
# ADMIN REGISTRATION SECRET (Optional)
# ------------------------------------------------
# Used to protect the admin registration endpoint
ADMIN_REGISTRATION_SECRET=your-admin-registration-secret

# ------------------------------------------------
# SPRING PROFILES
# ------------------------------------------------
# Set to 'prod' for production
SPRING_PROFILES_ACTIVE=default
